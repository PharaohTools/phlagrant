<phpunit>
    <testsuites>
        <testsuite name="Module Tests">
            <directory suffix=".php">../../../src/Modules/*/Tests/phpunit</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory suffix=".php">../../../src/Modules/*/Views</directory>
        </blacklist>
        <whitelist>
            <directory suffix=".php">../../../src/Modules/*/Controller</directory>
        </whitelist>
    </filter>
</phpunit>